{
	"name": "EmailAlerts_2nd",
	"properties": {
		"description": "Pipeline email notification on job completion",
		"activities": [
			{
				"name": "SendEmailNotification",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "GetSendGridAPIKey",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "POST",
					"headers": {
						"Content-Type": "application/json"
					},
					"url": {
						"value": "https://api.sendgrid.com/v3/mail/send",
						"type": "Expression"
					},
					"connectVia": {
						"referenceName": "AutoResolveIntegrationRuntime",
						"type": "IntegrationRuntimeReference"
					},
					"body": {
						"value": "{\n  \"personalizations\": [\n    {\n      \"to\": [{ \"email\": \"@{pipeline().parameters.EmailTo}\" }]\n    }\n  ],\n  \"from\": {\n    \"email\": \"@{pipeline().globalParameters.FromEmail}\"\n  },\n  \"subject\": \"@{pipeline().parameters.Subject}\",\n  \"content\": [\n    {\n      \"type\": \"text/plain\",\n      \"value\": \"Activity: @{pipeline().parameters.Activity}\\nEmail To: @{pipeline().parameters.EmailTo}\\nSubject: @{pipeline().parameters.Subject}\\nMessage: @{pipeline().parameters.Message}\\nStatus: @{pipeline().parameters.Status}\\nImportance: @{pipeline().parameters.Importance}\\nData Factory Name: @{pipeline().DataFactory}\\nPipeline Name: @{pipeline().Pipeline}\"\n    }\n  ],\n  \"custom_args\": {\n    \"DataFactoryName\": \"@{pipeline().DataFactory}\",\n    \"PipelineName\": \"@{pipeline().Pipeline}\",\n    \"Status\": \"@{pipeline().parameters.Status}\"\n  }\n}\n",
						"type": "Expression"
					}
				}
			},
			{
				"name": "GetSendGridAPIKey",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "GET",
					"headers": {
						"Content-Type": "application/json"
					},
					"url": {
						"value": "@concat('https://sccu-keyvault.vault.azure.net/secrets/SCCUSendGridAPI-PROD?api-version=7.0')",
						"type": "Expression"
					},
					"connectVia": {
						"referenceName": "AutoResolveIntegrationRuntime",
						"type": "IntegrationRuntimeReference"
					},
					"authentication": {
						"type": "MSI",
						"resource": "https://vault.azure.net"
					}
				}
			}
		],
		"parameters": {
			"Activity": {
				"type": "string",
				"defaultValue": "web"
			},
			"EmailTo": {
				"type": "string",
				"defaultValue": "SCCUADFNotifications@claysys.com"
			},
			"Subject": {
				"type": "string",
				"defaultValue": "Test"
			},
			"Message": {
				"type": "string",
				"defaultValue": "This is test email"
			},
			"Status": {
				"type": "string"
			},
			"Importance": {
				"type": "string",
				"defaultValue": "Normal"
			},
			"DataFactoryName": {
				"type": "string"
			},
			"Pipelinename": {
				"type": "string"
			}
		},
		"annotations": []
	}
}